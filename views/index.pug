extends layout

block content
  div.Browse
    div.Browse__container
      div.Browse__msg
        div.Browse__msg__header Browse Projects
        div.Browse__msg__text Start seaching for projects now. 
      div.Browse__search
        // Search Bar
        div.Browse__searchbar
          input.form-control(type='text', placeholder='Search for projects here...', aria-label='search')
        // Concept Tags Filter
        div.Browse__tagFilter 
          div.Browse__tagFilter__title Filter by concepts
          div.Browse__tagFilter__tagList#conceptTagContainer
        // Stack Tags Filter
        div.Browse__tagFilter 
          div.Browse__tagFilter__title Filter by stack
          div.Browse__tagFilter__tagList#techStackTagContainer
        // Applied Tags
        div.Browse__appliedFilter 
          div.Browse__appliedFilter__title Applied filters
          div.Browse__appliedFilter__tagList#filterTags
            ul#filterTagsList
    div.Browse__projects
      div.Browse__projectsList#filteredProjects
        #myModal.modal(tabindex='-1', role='dialog', aria-hidden='true')
          .modal-dialog.modal-dialog-centered(role='document', style='max-width:800px')
            .modal-content
              .modal-header
                h1.modal-title Project Hololens
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                  span(aria-hidden='true') Ã—
              .modal-body(style='overflow-y:scroll;')
                p Microsoft HoloLens is the first self-contained, holographic computer, enabling you to engage with your digital content and interact with holograms in the world around you.
                p contact 
                  a(href='#') t-aaperr@microsoft.com for more info!
              .modal-footer
