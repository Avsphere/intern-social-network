doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description', content='')
    meta(name='author', content='')
    title Intern Social Network
    // Bootstrap core CSS
    link(href='lib/bootstrap/dist/css/bootstrap.min.css', rel='stylesheet')
    link(href='css/cards.css', rel='stylesheet')
    link(href='css/style.css', rel='stylesheet')
    // Custom fonts for this template
    link(href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:200,200i,300,300i,400,400i,600,600i,700,700i,900,900i', rel='stylesheet')
    link(href='https://fonts.googleapis.com/css?family=Merriweather:300,300i,400,400i,700,700i,900,900i', rel='stylesheet')
  body
    header.navbar.navbar-expand.navbar-dark.flex-column.flex-md-row.bd-navbar
      a.navbar-brand.mr-0.mr-md-2(href='#', style='margin-left:2%')
        img.logoImage(src='./media/microsoftLogo.png')
      .pageTitle
        h4
          a(href='./index.html') Intern Social Network
      ul.navbar-nav.flex-row.ml-md-auto.d-none.d-md-flex
        li.nav-item.dropdown
          a#bd-versions.nav-item.nav-link.dropdown-toggle.mr-md-2(href='#', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
            | #{user.displayName}
          .dropdown-menu.dropdown-menu-right(aria-labelledby='bd-versions')
            a.dropdown-item(href='#') Edit profile
            .dropdown-divider
            a.dropdown-item(href='#') Sign out
    block content
  script(src='js/main.js')
